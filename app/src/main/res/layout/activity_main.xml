<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_action_bar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/action_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp" />

        <TextView
                android:id="@+id/action_bar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/name"
                android:textSize="16sp"
                android:textColor="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="visible"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_action_bar"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow"
            app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/arrow"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/cl_action_bar"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cheater"
            android:textColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

    <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/avatar_border" />

    <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_level_int"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@id/tv_level"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            android:layout_marginTop="18dp">

        <ImageView
                android:id="@+id/iv_level_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/level_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/tv_level_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_3"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_icon_points"
            android:layout_width="0dp"
            android:layout_height="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_level"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/background_alpha">

        <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

        <TextView
                android:id="@+id/tv_posol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posol"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@id/iv_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@id/tv_200_points"
                app:layout_constraintVertical_chainStyle="spread" />

        <TextView
                android:id="@+id/tv_200_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points"
                app:layout_constraintStart_toEndOf="@id/iv_icon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_posol"
                android:textColor="@color/grey"
                android:textSize="11sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_icon_points"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            android:backgroundTint="#591C55"
            android:layout_marginTop="4dp"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textAllCaps="false" />

    <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container"
            android:layout_width="0dp"
            android:layout_height="328dp"
            android:background="@drawable/background_alpha"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="12dp">

        <TextView
                android:id="@+id/tv_online"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/online"
                android:background="@color/dark_black"
                android:textSize="20sp"
                android:textColor="#03A9F4"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_icons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cl_groups"
                app:layout_constraintTop_toBottomOf="@id/tv_online"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/dark_black"
                android:layout_marginTop="8dp">

            <TextView
                    android:id="@+id/tv_icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icons"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" />

            <TextView
                    android:id="@+id/tv_icons_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/two_icons"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_icons"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp" />

            <ImageView
                    android:id="@+id/iv_icon_first"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_icons"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                    android:id="@+id/iv_icon_second"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_second"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_icons"
                    app:layout_constraintStart_toEndOf="@id/iv_icon_first"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_groups"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/cl_icons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_online"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@color/dark_black">

            <TextView
                    android:id="@+id/tv_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/groups"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" />

            <TextView
                    android:id="@+id/tv_groups_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/groups_one"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_groups"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp" />

            <ImageView
                    android:id="@+id/iv_icon_group"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_group"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_groups"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_friends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_games"
                app:layout_constraintTop_toBottomOf="@id/cl_icons"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp">

            <TextView
                    android:id="@+id/tv_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friends"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" />

            <TextView
                    android:id="@+id/tv_friends_thirty_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thirty_one"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_friends"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp" />

            <ImageView
                    android:id="@+id/iv_friend_first"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/friend_first"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_friends"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                    android:id="@+id/iv_friend_second"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/friend_second"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_friends"
                    app:layout_constraintStart_toEndOf="@id/iv_friend_first"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                    android:id="@+id/iv_friend_third"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/friend_third"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_friends"
                    app:layout_constraintStart_toEndOf="@id/iv_friend_second"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_screenshots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_videos"
                app:layout_constraintTop_toBottomOf="@id/cl_friends"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp">

            <TextView
                    android:id="@+id/tv_screenshots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/screenshots"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                    android:id="@+id/tv_screenshots_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/groups_one"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_screenshots"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/tv_games"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_groups"
                app:layout_constraintStart_toEndOf="@id/cl_friends"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/games"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp" />

        <TextView
                android:id="@+id/tv_inventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_games"
                app:layout_constraintStart_toEndOf="@id/cl_friends"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/inventory"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="6dp" />

        <TextView
                android:id="@+id/tv_videos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_inventory"
                app:layout_constraintStart_toEndOf="@id/cl_screenshots"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/videos"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp" />

        <TextView
                android:id="@+id/tv_works"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_screenshots"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_views"
                android:text="@string/works"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

        <TextView
                android:id="@+id/tv_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_videos"
                app:layout_constraintStart_toEndOf="@id/tv_works"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/reviews"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp" />

        <TextView
                android:id="@+id/tv_documentation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_works"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_illustrations"
                android:text="@string/documentation"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

        <TextView
                android:id="@+id/tv_illustrations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_views"
                app:layout_constraintStart_toEndOf="@id/tv_documentation"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/illustrations"
                android:background="@color/dark_black"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>